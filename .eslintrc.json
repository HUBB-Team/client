{
  "root": true,
  "extends": [
    "eslint:recommended",
    "standard",
    "standard-latest",
	"plugin:react/recommended",
    "standard-react",
	"plugin:jsx-a11y/recommended",
    "plugin:unicorn/recommended"
  ],
  "plugins": [
    "json",
    "no-loops",
    "unicorn",
	"jsx-a11y"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "$": true,
	"jQuery":true,
    "React": true,
    "ReactDOM": true
  },
  "rules": {
    "no-loops/no-loops": 1,
    "unicorn/filename-case": 0,
	"jsx-quotes":[2,"prefer-double"]
  }
}
